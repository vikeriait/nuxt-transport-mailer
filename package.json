{
  "name": "@vikeriait/nuxt-transport-mailer",
  "version": "1.0.0",
  "description": "Robust Nuxt module for sending emails with Nodemailer, featuring built-in API, Zod validation, Captcha protection, and Rate Limiting.",
  "homepage": "https://nuxt-transport-mailer.vikeria.it",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikeriait/nuxt-transport-mailer.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "main": "./dist/module.mjs",
  "typesVersions": {
    "*": {
      ".": [
        "./dist/types.d.mts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepack": "nuxt-module-build build",
    "dev": "npm run dev:prepare && nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "npm run lint && npm run test && npm run prepack && changelogen --release && npm publish && git push --follow-tags",
    "lint": "eslint .",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@nuxt/kit": "^4.2.2",
    "@types/nodemailer": "^7.0.5",
    "defu": "^6.1.4",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.1.1",
    "@nuxt/eslint-config": "^1.12.1",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/schema": "^4.2.2",
    "@nuxt/test-utils": "^3.22.0",
    "@types/node": "latest",
    "@vitest/ui": "^4.0.17",
    "changelogen": "^0.6.2",
    "eslint": "^9.39.2",
    "nuxt": "^4.2.2",
    "nuxt-security": "2.5.0",
    "typescript": "~5.9.3",
    "vitepress": "2.0.0-alpha.15",
    "vitepress-plugin-group-icons": "^1.6.5",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.2",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "nuxt-security": "2.5.0",
    "zod": "^4.3.5"
  }
}
